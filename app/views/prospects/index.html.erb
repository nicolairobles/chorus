<div class="container">
  <div class="row">
    


<p id="notice"><%= notice %></p>

<h1>Listing Prospects</h1>

<table class="col-sm-12">
  <thead>
    <tr>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @prospects.each do |prospect| %>
      <tr>
        <td style="padding-right: 25px"><%= prospect.email %></td>
        <td style="padding-right: 25px"><%= link_to 'Edit', edit_prospect_path(prospect) %></td>
        <td style="padding-right: 25px"><%=prospect.created_at.strftime("%B %d %Y at %I:%M %p")%></td>
        <td><%= link_to 'Destroy', prospect, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br>

<%= link_to 'New Prospect', new_prospect_path %>

<h1>Email List</h1>

  <% @prospects.each do |prospect| %>
    <%= prospect.email + ", " %>
  <% end %>


  </div>
</div>